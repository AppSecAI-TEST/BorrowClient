<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_loan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/color_2b2c30"
            android:textSize="16dp"
            tools:text="产品" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_loan_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="38dp"
                    android:textColor="@color/color_a1a1a1"
                    android:textSize="13dp"
                    tools:text="申请时间:" />


                <TextView
                    android:id="@+id/tv_loan_item_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_a1a1a1"
                    android:textSize="13dp"
                    tools:text="申请金额: " />

                <TextView
                    android:id="@+id/tv_loan_item_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_a1a1a1"
                    android:textSize="13dp"
                    tools:text="利率: " />

                <TextView
                    android:id="@+id/tv_item_phonenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_a1a1a1"
                    android:textSize="13dp"
                    tools:text="联系电话" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_cancel"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/border_easty"
            android:gravity="center_vertical|center_horizontal"
            android:text="取消申请"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_progress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        tools:src="@drawable/technological" />
</LinearLayout>