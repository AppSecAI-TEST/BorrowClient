<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:id="@+id/rl_apply"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/color_fd6333" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="下一步"
            android:textColor="@android:color/white"
            android:textSize="17dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/rl_apply"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp" >

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/lieziti"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_apply_name"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="请输入姓名"
                android:textColorHint="@color/color_d7d7d7"
                android:shadowDx="0.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:singleLine="true"
                android:textSize="14dp" >
            </EditText>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_e4e4e4" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp" >

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="@color/lieziti"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_apply_phone_number"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/color_d7d7d7"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="number"
                android:shadowDx="0.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:singleLine="true"
                android:textSize="14dp" >
            </EditText>
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_e4e4e4" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp" >

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="金额"
                android:textColor="@color/lieziti"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_apply_money"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:textColorHint="@color/color_d7d7d7"
                android:hint="请输入贷款金额"
                android:inputType="number"
                android:shadowDx="0.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:singleLine="true"
                android:textSize="14dp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="万元"
                android:textColor="@color/lieziti"
                android:textSize="14dp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_e4e4e4" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp" >

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="用途"
                android:textColor="@color/lieziti"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_apply_use"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:textColorHint="@color/color_d7d7d7"
                android:hint="请输入贷款用途"
                android:shadowDx="0.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:singleLine="true"
                android:textSize="14dp" >
            </EditText>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_e4e4e4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp" >

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="@color/lieziti"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_apply_smscode"
                android:layout_marginTop="8dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:textColorHint="@color/color_d7d7d7"
                android:hint="请输入验证码"
                android:inputType="number"
                android:shadowDx="0.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:singleLine="true"
                android:textSize="14dp" >
            </EditText>

            <Button
                android:id="@+id/bt_apply_get_code"
                android:layout_marginTop="8dp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/border_easty"
                android:text="@string/get_verification_code"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_e4e4e4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/view_line"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/rl_minewillroomloan"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_klzq"
                android:layout_marginTop="3dp"
                android:gravity="center_horizontal"
                android:text="申请人信息"
                android:textColor="@color/white"
                android:textSize="11dp" />

            <ImageView
                android:id="@+id/iv_klzq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/siyi" />

            <View
                android:layout_width="20dp"
                android:layout_height="2px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_klzq"
                android:background="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_applionezhonglie"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_klzqsss"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:gravity="center_horizontal"
                android:text="申请人资质"
                android:textColor="@color/white"
                android:textSize="11dp" />

            <ImageView
                android:id="@+id/iv_klzqsss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/fouer" />

            <View
                android:layout_width="20dp"
                android:layout_height="2px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_klzqsss"
                android:background="@color/white" />

            <View
                android:layout_width="20dp"
                android:layout_height="2px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_klzqsss"
                android:background="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_minewillcredit"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imv_minework"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:gravity="center_horizontal"
                android:text="申请结果"
                android:textColor="@color/white"
                android:textSize="11dp" />

            <ImageView
                android:id="@+id/imv_minework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/fousan" />

            <View
                android:layout_width="20dp"
                android:layout_height="2px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imv_minework"
                android:background="@color/white" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>