<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/color_e4e4e4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <TextView
                    android:id="@+id/tv_loan_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="18dp"
                    tools:text="好借贷-赎楼贷"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_loan_type"
                    android:layout_width="50dp"
                    android:layout_height="15dp"
                    android:layout_below="@+id/tv_loan_limit_deadline"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/border_buludeatils"
                    android:gravity="center_horizontal|center_vertical"
                    tools:text="抵押贷"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="8dp" />

                <TextView
                    android:id="@+id/tv_loan_limit_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_loan_title"
                    android:layout_below="@+id/tv_loan_title"
                    android:layout_marginTop="2dp"
                    tools:text="20申请/1天放款"
                    android:textSize="10dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/color_e4e4e4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:id="@+id/tv_loandeatilsjine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:text="金额"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_alignBottom="@+id/tv_loandeatilsjine"
                    android:layout_alignTop="@+id/tv_loandeatilsjine"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/tv_loandeatilsjine"
                    android:background="@drawable/border_whityedeatils">

                    <EditText
                        android:id="@+id/et_loan_num"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/transparent"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="5"
                        android:textColor="@color/view_line"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/et_loan_num"
                        android:layout_alignBottom="@+id/et_loan_num"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="万"
                        android:textSize="16dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/et_loantealis_qixian"
                    android:text="期数"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:id="@+id/et_loantealis_qixian"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_alignBottom="@+id/tv_loandeatilsjine"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/textView3"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/border_whityedeatils">

                    <TextView
                        android:id="@+id/tv_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="个月"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_loan_deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_toLeftOf="@id/tv_month"
                        android:background="@color/transparent"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="5"
                        android:textColor="@color/view_line"
                        android:textSize="16dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_loan_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tdsadsa3"
                        android:layout_alignBottom="@+id/tdsadsa3"
                        android:layout_toRightOf="@+id/tdsadsa3"
                        tools:text="1~100W"
                        android:textColor="@color/decergreeitem"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_loan_deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_loan_limit"
                        android:layout_alignBottom="@+id/tv_loan_limit"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="22dp"
                        tools:text="1~3个月"
                        android:textColor="@color/decergreeitem"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tdsadsa3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22dp"
                        android:text="额度范围:"
                        android:textColor="@color/decergreeitem"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/textfdghfgfdsiew3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_loan_deadline"
                        android:layout_alignBottom="@+id/tv_loan_deadline"
                        android:layout_toLeftOf="@+id/tv_loan_deadline"
                        android:text="期限范围:"
                        android:textColor="@color/decergreeitem"
                        android:textSize="14dp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/color_f7f7f7" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/color_f7f7f7" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="利率说明"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="38dp"
                android:layout_margin="20dp"
                android:background="@drawable/border_zhijiao">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_daikuanqixian"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="贷款期限(月)" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/color_282828" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="月手续费率" />
                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/linearLayout1"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/view1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_loan_deatil_deadline"
                        tools:text="1~3个月"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/color_282828" />

                    <TextView
                        android:id="@+id/tv_loan_deatil_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="2.0%"
                        android:textColor="@color/color_fd6333" />
                </LinearLayout>
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="申请条件"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/tv_apply_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                tools:text="支持提前还款,有违约金."
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/color_f7f7f7" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/shenpifangkuan" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/color_f7f7f7" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="所需材料"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/tv_material_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                tools:text="支持提前还款,有违约金."
                android:textSize="14dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/rl_apply"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/redhomeitem">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="立即申请"
            android:textColor="@android:color/white"
            android:textSize="17dp" />
    </RelativeLayout>
</RelativeLayout>